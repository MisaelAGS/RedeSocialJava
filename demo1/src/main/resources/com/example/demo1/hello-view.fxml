<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.HelloController">
    <center>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <HBox spacing="5" alignment="CENTER">
                <TextField fx:id="emailField" promptText="E-mail"/>
            </HBox>

            <HBox spacing="5" alignment="CENTER">
                <PasswordField fx:id="passwordField" promptText="Senha"/>
            </HBox>

            <Button text="Acessar" style="-fx-background-color: #007BFF; -fx-text-fill: white;" onAction="#login"/>

        </VBox>
    </center>
</BorderPane>
